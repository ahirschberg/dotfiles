## ========== add laptop fn keys ==========

# change brightness and send update signal to i3blocks
bindsym XF86MonBrightnessUp exec "sudo /usr/local/bin/abrightctl -inc 30 && pkill -RTMIN+10 i3blocks"
bindsym XF86MonBrightnessDown exec sudo /usr/local/bin/abrightctl -dec 30 \
    && pkill -RTMIN+10 i3blocks

# Pulse Audio controls

#increase sound volume and send update signal to i3blocks
bindsym XF86AudioRaiseVolume exec pactl set-sink-volume @DEFAULT_SINK@ +5% && \
    pkill -RTMIN+10 i3blocks

#decrease sound volume
bindsym XF86AudioLowerVolume exec pactl set-sink-volume @DEFAULT_SINK@ -5% && \
    pkill -RTMIN+10 i3blocks
## mute sound
bindsym XF86AudioMute exec pactl set-sink-mute @DEFAULT_SINK@ toggle && pkill -RTMIN+10 i3blocks

mode "mark_window" {
    bindsym q mark "q" ; mode "default"
        bindsym w mark "w" ; mode "default"
        bindsym e mark "e" ; mode "default"
        bindsym m exec i3-input -F 'mark %s' -P 'Mark name: ' ; mode "default"
        bindsym $mod+m exec i3-input -F 'mark %s' -P 'Mark name: ' ; mode "default"
        bindsym $mod+Shift+m exec i3-input -F 'mark %s' -P 'Mark name: ' ; mode "default"

        bindsym Return mode "default"
        bindsym Escape mode "default"
}

mode "go_to_window" {
    bindsym q [con_mark="q"] focus ; mode "default"
        bindsym w [con_mark="w"] focus ; mode "default"
        bindsym e [con_mark="e"] focus ; mode "default"
        bindsym Tab exec i3-input -F '[con_mark=%s] focus' -P 'Go to mark: ' ; mode "default"
        bindsym Return mode "default"
        bindsym Escape mode "default"
}

bindsym $mod+p exec i3-input -F '[con_mark=%s] focus' -P 'Go to mark: ' ; mode "default"
bindsym $mod+m mode "go_to_window"
bindsym $mod+Shift+m mode "mark_window"

bindsym $mod+g exec bash -c 'kill -SIGSTOP "$($HOME/.scripts/i3_freezer)"'
bindsym $mod+Shift+g exec bash -c 'kill -SIGCONT "$($HOME/.scripts/i3_freezer)"'
